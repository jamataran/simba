{% extends 'layout.bootstrap.html.twig' %}
{% block body %}


    <div class="container-fluid">
        <h1 class="mt-5">Histórico de consumos</h1>
        <table class="table table-striped table-condensed table-responsive repostaje">
            <thead>
            <tr>
                <th>Fecha</th>
                <th>Kilómetros recorridos</th>
                <th>Total litros</th>
                <th>Consumo medio</th>
                <th>Total Repostaje</th>
                <th>Precio carburante</th>
                <th>Medida ordenador</th>
                <th>Acciones</th>
            </tr>
            </thead>
            <tbody>

            {% for repostaje in repostajes %}

                <tr>
                    <td>{{ repostaje.fechaRepostaje |date('d-m-Y (H:i)') }}</td>
                    <td><code>{{ repostaje.kilometros | number_format(2, ',', '.') }}</code></td>
                    <td><code>{{ repostaje.litrosRepostados | number_format(2, ',', '.') }}</code></td>
                    <td>{{ repostaje.consumoMedio | number_format(2, ',', '.') }}</td>
                    <td><code>{{ repostaje.totalRepostaje | number_format(2, ',', '.') }} €</code></td>
                    <td><code>{{ repostaje.precioCombustible | number_format(3, ',', '.') }} €</code></td>
                    <td><code>{{ repostaje.medidaOrdenador | number_format(2, ',', '.') }}</code></td>
                    <td>
                        <button type="button" class="btn btn-warning">Editar</button>
                        <button type="button" class="btn btn-danger">Eliminar</button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>



{% endblock %}